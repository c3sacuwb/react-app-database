{
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "amd": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },    
    "rules": {
      "quotes": [2, "single", { "avoidEscape": true }],
      "no-console": 0
    },
  }
  